{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./build",
    "target": "es2016",
    "module": "commonjs",
    "lib": ["esnext"],
    "jsx": "react",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "allowJs": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": [
    "./scripts/**/*",
    "./src/site/**/*"
  ]
}